<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

  {{!-- Sheet Header --}}
  <header class="sheet-header">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Name"/></h1>
      <div class="resources grid grid-3col">
        <div class="resource flex-group-center">
          <label for="system.health" class="resource-label">Sangue</label>
          <div class="resource-content flexrow flex-center flex-between">
          <span name="system.health.total">{{system.health.total}}</span>
          <span> / </span>
          <input type="text" name="system.health.lost" value="{{system.health.lost}}" data-dtype="Number"/>
          <span> / </span>
          <span name="system.health.current">{{system.health.current}}</span>
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.stamina" class="resource-label">Vigor</label>
          <div class="resource-content flexrow flex-center flex-between">
          <span name="system.stamina.total">{{system.stamina.total}}</span>
          <span> / </span>
          <input type="text" name="system.stamina.lost" value="{{system.stamina.lost}}" data-dtype="Number"/>
          <span> / </span>
          <span name="system.stamina.current">{{system.stamina.current}}</span>
          </div>
        </div>

          <div class="resource flex-group-center">
          <label for="system.mana" class="resource-label">Mana</label>
          <div class="resource-content flexrow flex-center flex-between">
          <span name="system.mana.total">{{system.mana.total}}</span>
          <span> / </span>
          <input type="text" name="system.mana.lost" value="{{system.mana.lost}}" data-dtype="Number"/>
          <span> / </span>
          <span  name="system.mana.current">{{system.mana.current}}</span>
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.dailyRegeneration" class="resource-label">Regeneração Diaria</label>
          <div class="resource-content flexrow flex-center flex-between">
          <span name="system.dailyRegeneration.base">{{system.dailyRegeneration.base}}</span>
          <span> / </span>
          <input type="text" name="system.dailyRegeneration.moddifier" value="{{system.dailyRegeneration.moddifier}}" data-dtype="Number"/>
          <span> / </span>
          <span name="system.dailyRegeneration.current">{{system.dailyRegeneration.current}}</span>
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.staminaRegeneration" class="resource-label">Regeneração de Vigor</label>
          <div class="resource-content flexrow flex-center flex-between">
          <span name="system.staminaRegeneration.base">{{system.staminaRegeneration.base}}</span>
          <span> / </span>
          <input type="text" name="system.staminaRegeneration.moddifier" value="{{system.staminaRegeneration.moddifier}}" data-dtype="Number"/>
          <span> / </span>
          <span name="system.staminaRegeneration.current">{{system.staminaRegeneration.current}}</span>
          </div>
        </div>

          <div class="resource flex-group-center">
          <label for="system.manaRegeneration" class="resource-label">Regeneração de Mana</label>
          <div class="resource-content flexrow flex-center flex-between">
          <span name="system.manaRegeneration.base">{{system.manaRegeneration.base}}</span>
          <span> / </span>
          <input type="text" name="system.manaRegeneration.moddifier" value="{{system.manaRegeneration.moddifier}}" data-dtype="Number"/>
          <span> / </span>
          <span  name="system.manaRegeneration.current">{{system.manaRegeneration.current}}</span>
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.attributes.level.value" class="resource-label">Level</label>
          <div class="resource-content flexrow flex-center flex-between">
          <input type="text" name="system.level" value="{{system.level}}" data-dtype="Number"/>
          </div>
        </div>

      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    {{!-- Default tab is specified in actor-sheet.mjs --}}
    <a class="item" data-tab="features">Features</a>
    <a class="item" data-tab="description">Description</a>
    <a class="item" data-tab="items">Items</a>
    <a class="item" data-tab="spells">Spells</a>
    <a class="item" data-tab="effects">Effects</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Owned Features Tab --}}
    <div class="tab features" data-group="primary" data-tab="features">      
      {{> "systems/guismi/templates/actor/parts/actor-attributes.hbs"}}
    </div>

    {{!-- Biography Tab --}}
    <div class="tab biography" data-group="primary" data-tab="description">
      {{!-- If you want TinyMCE editors to output inline rolls when rendered, you need to pass the actor's roll data to the rollData property. --}}
      {{editor system.biography target="system.biography" rollData=rollData button=true owner=owner editable=editable}}
    </div>

    {{!-- Owned Items Tab --}}
    <div class="tab items" data-group="primary" data-tab="items">
       {{> "systems/guismi/templates/actor/parts/actor-items.hbs"}}
    </div>

    {{!-- Owned Spells Tab --}}
    <div class="tab spells" data-group="primary" data-tab="spells">
      {{> "systems/guismi/templates/actor/parts/actor-spells.hbs"}}
    </div>

    {{!-- Active Effects Tab --}}
    <div class="tab effects flexcol" data-group="primary" data-tab="effects">
      {{> "systems/guismi/templates/actor/parts/actor-effects.hbs"}}
    </div>

  </section>
</form>

{{log system}}

